<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.security.auth.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.security.auth.entity.User">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="enabled" property="enabled"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password
    </sql>

    <resultMap id="UserDetailsDTOResultMap" type="com.example.security.auth.entity.UserDetailsDTO">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="enabled" property="enabled"/>
        <collection property="roleList" resultMap="RoleResultMap"/>
    </resultMap>

    <!-- Role通用查询映射结果 -->
    <resultMap id="RoleResultMap" type="com.example.security.auth.entity.Role">
        <id column="role_id" property="id" />
        <result column="role_name" property="name" />
        <result column="role_description" property="description" />
    </resultMap>

    <select id="findUserDetailsByUsername" resultMap="UserDetailsDTOResultMap">
            select
            u.id,
            u.username,
            u.password,
            u.enabled,
            r.id as role_id,
            r.name as role_name,
            r.description as role_description
            from user u
            inner join  user_role ur on ur.user_id = u.id
            inner join role r on r.id = ur.role_id
            where u.username = #{username}
    </select>

</mapper>
